{
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "semi": ["error", "never"],
    "comma-dangle": 0,
    "space-before-function-paren": ["error", "always"],
    "indent": 0,
    "linebreak-style": 0,
    "max-len": ["error", 120],
    "no-console": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "jsx-a11y/href-no-hash": 0,
    "func-names": 0,
    "no-restricted-syntax": 0,
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Gruu" : true,
    "GruuRouter": true
  }
}
